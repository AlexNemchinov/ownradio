<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffff"

			  android:orientation="horizontal">

	<ImageView
		android:id="@+id/viewsIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:scaleType="centerCrop"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:src="@drawable/logo" />

	<LinearLayout
		android:id="@+id/linearLayoutInfo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/viewsArtist"
			android:textColor="#419bda"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scrollbars = "vertical"
			android:maxLines="1"
			android:text="Artist" />

		<TextView
			android:id="@+id/viewsTitle"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scrollbars = "vertical"
			android:maxLines="1"
			android:text="Title"
			/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/viewsPlayPause"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:padding="5dp"
		android:background="#00000000"
		android:src="@drawable/btn_play_action" />

	<ImageButton
		android:id="@+id/viewsNext"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="20dp"
		android:layout_gravity="center_vertical"
		android:background="#00000000"
		android:src="@drawable/btn_next_action" />

</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffffff"
	android:orientation="horizontal"
	>

		<ImageButton
			android:id="@+id/viewsPlayPause"
			android:layout_width="@dimen/playback_controls_buttons_shade"
			android:layout_height="@dimen/playback_controls_buttons_shade"
			android:background="@drawable/circular_button_selector_shade"
			android:src="@drawable/btn_play"
			android:tint="@color/ColorPrimaryBtnPlay"
			android:elevation="10dp"
			android:padding="20dp"
			android:layout_margin="10dp"
			android:layout_gravity="center_vertical"
			/>


	<LinearLayout
		android:id="@+id/linearLayoutInfo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/viewsTitle"
			android:textColor="@color/colorPrimary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scrollbars = "vertical"
			android:fontFamily="sans-serif"
			android:textAppearance="?android:attr/textAppearance"
			android:maxLines="1"
			android:text="Title" />

		<TextView
			android:id="@+id/viewsArtist"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scrollbars = "vertical"
			android:fontFamily="sans-serif"
			android:textAppearance="?android:attr/textAppearance"
			android:maxLines="1"
			android:text="Artist"
			/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/viewsNext"
		android:layout_width="@dimen/playback_controls_buttons_shade"
		android:layout_height="@dimen/playback_controls_buttons_shade"
		android:background="@drawable/circular_button_selector_shade"
		android:src="@drawable/btn_next"
		android:tintMode="src_in"
		android:tint="@color/ColorPrimaryBtn80"
		android:elevation="10dp"
		android:padding="20dp"
		android:layout_margin="10dp"
		android:layout_gravity="center_vertical"
		/>

</LinearLayout>